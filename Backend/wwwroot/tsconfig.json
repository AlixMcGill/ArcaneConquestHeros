{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "esnext",
        "verbatimModuleSyntax": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",

        /* Strictness */
        "strict": true,
        "noUncheckedIndexedAccess": true,

        /* transpiling */
        "moduleResolution": "node",
        "module": "ESNext",
        "outDir": "./js",
        "sourceMap": true,

        /* Dom Options */
        "lib": ["esnext", "dom", "dom.iterable"]
    },
    "include": [
        "./ts/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
